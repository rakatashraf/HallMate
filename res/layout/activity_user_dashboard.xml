<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard"
    tools:context=".userside.UserDashboard">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="45dp"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:clipToPadding="false">

            <!-- Profile Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="90dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="15dp"
                        android:contentDescription="User Profile Picture"
                        app:srcCompat="@drawable/user"
                        app:tint="#B17A29" />

                    <TextView
                        android:id="@+id/welcomeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi, Student!"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:textColor="@color/end"
                        android:textSize="28sp"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Row 1: Weekly Cost & Monthly Cost -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="20dp"
                android:weightSum="2"
                android:paddingHorizontal="4dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardWeeklyCost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:minHeight="80dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/btnMealToggle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient"
                        android:gravity="center"
                        android:paddingVertical="20dp"
                        android:text="Manage Meals"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMonthlyCost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:minHeight="80dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/btnDailyMealCost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient"
                        android:gravity="center"
                        android:paddingVertical="20dp"
                        android:text="Daily Meal Cost"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Row 2: Meal Menu & Daily Cost -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:weightSum="2"
                android:paddingHorizontal="4dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMealMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:minHeight="80dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/btnMonthlyBill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient"
                        android:gravity="center"
                        android:paddingVertical="20dp"
                        android:text="Total Monthly Bill"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDailyCost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:minHeight="80dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/btnWeeklyMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient"
                        android:gravity="center"
                        android:paddingVertical="20dp"
                        android:text="Weekly Menu"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Extra Buttons (Placed above Settings Button) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:weightSum="2"
                android:paddingHorizontal="4dp">

                <!-- Extra Button 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/notification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:minHeight="80dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/btnNotifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient"
                        android:gravity="center"
                        android:paddingVertical="20dp"
                        android:text="Announcement"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <!-- Extra Button 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/complainbtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:minHeight="80dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/btnComplainBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient"
                        android:gravity="center"
                        android:paddingVertical="20dp"
                        android:text="Complain Box"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>



            <!-- Logout Button (Added at the end) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/end"
                    android:gravity="center"
                    android:paddingVertical="20dp"
                    android:text="Logout"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
