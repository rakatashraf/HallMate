<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/dashboard">

    <!-- Greeting Message -->
    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendar"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textColor="@color/end" />

    <!-- Toggle All Meals Switch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding=".5dp"
        android:layout_marginTop=".5dp">

        <Switch
            android:id="@+id/switchMeals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toggle All Meals"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:background="@drawable/calendar_button_background"
            android:thumbTint="@color/switch_thumb_on"
            android:trackTint="@color/switch_track_on"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <!-- Calendar View -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:weekDayTextAppearance="@style/CalendarViewTextAppearance"
        android:scaleX="1"
        android:scaleY="1" />

    <!-- Meal Checkbox -->
    <CheckBox
        android:id="@+id/mealCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Meal On for Selected Date"
        android:textSize="15sp"
        android:checked="true"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:padding="8dp" />

</LinearLayout>
