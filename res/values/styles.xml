<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyledButtonGreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btn_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyledButtonYellow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/btn_yellow</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyledButtonRed">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btn_red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarDarkStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#BDBDBD</item>
        <item name="android:dateTextAppearance">@style/CalendarDateTextDark</item>
    </style>

    <style name="CalendarDateTextDark" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="FancyButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#3D3D3D</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">14dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:background">@drawable/button_card</item>
    </style>

    <style name="FancyButtonRed" parent="FancyButton">
        <item name="android:backgroundTint">#FF5252</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_card_red</item>
    </style>


</resources>
